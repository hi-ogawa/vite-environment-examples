{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": ["src", "e2e", "*.ts"],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "exactOptionalPropertyTypes": false,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client", "@types/bun"],
    "jsx": "react-jsx"
  }
}

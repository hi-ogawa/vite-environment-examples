{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": ["src", "vite.config.ts"],
  "compilerOptions": {
    "exactOptionalPropertyTypes": false,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client"]
  }
}

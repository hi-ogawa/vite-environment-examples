{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "include": ["src", "tsup.config.ts"],
  "compilerOptions": {
    "checkJs": false,
    "exactOptionalPropertyTypes": false,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  }
}
